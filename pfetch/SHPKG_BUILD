# package name
shpkg_name="pfetch fast system info in the shell | git build"

# package build and runtime dependencies
shpkg_build_depends=""

shpkg_depends="bash"

# package source code
shpkg_source="https://github.com/dylanaraps/pfetch"

shpkg_src_use_git="true"

prepare(){
	  cd ${SRCDIR}
	  sleep 4
}

build(){
        make
}

finish(){
	 make install
         echo "succesfull!"
         sleep 2
}

remove(){
	 ${SHPKG_SUDO} rm -rf $PREFIX/bin/pfetch
}

